# DriftX Backend Configuration

# Snapshot interval in minutes
# How often to automatically capture system snapshots
SNAPSHOT_INTERVAL=5

# Timezone for scheduler
# Use IANA timezone names (e.g., UTC, America/New_York, Europe/London)
TIMEZONE=UTC

# Enable/disable automatic snapshot creation
# Set to false to disable scheduled snapshots
AUTO_SNAPSHOT_ENABLED=true

# Maximum number of snapshots to keep
# Older snapshots will be automatically deleted
MAX_SNAPSHOTS=1000
